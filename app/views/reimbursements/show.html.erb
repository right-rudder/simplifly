<%= render "header"%>

<main class="bg-gradient-to-t from-sky-50 to-slate-50 min-h-screen">
  <h1 class="text-xl font-header font-semibold text-center uppercase pt-10 pb-5">Reimbursement Details</h1>
  <div class="mx-auto md:w-1/3 w-full flex lg:bg-white lg:border lg:rounded-xl pb-5">
    
    <div class="mx-auto px-2 overflow-x-scroll">
      <% if notice.present? %>
        <p class="mt-3 py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>

      <%= render @reimbursement %>
      <div class="flex gap-2">
        <% if @reimbursement.status != "Paid"%>
          <%= button_to 'Toggle Status', mark_as_paid_view_reimbursement_path(@reimbursement), method: :patch, class: "btn-primary cursor-pointer text-base" %>
        <% else %>
          <%= button_to 'Toggle Status', mark_as_viewed_view_reimbursement_path(@reimbursement), method: :patch, class: "btn-primary cursor-pointer text-base" %>
        <% end %>
        <%= button_to 'Delete', reimbursement_path(@reimbursement), method: :delete, class: "btn-primary cursor-pointer text-base hover:bg-red-800 hover:border-red-800 bg-red-700 border-red-700" %>
        <%= link_to 'Back', reimbursement_index_path, class: "btn-primary cursor-pointer text-base" %>
      </div>
    </div>
  </div>
</main>