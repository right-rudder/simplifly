<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">News and Recent Articles</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">Stay up to date with what's happening at SimpliFly</p>
    </div>
    
    <% if @recent_posts.any? %>
      <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        <% @recent_posts.each do |post| %>
          <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
            <%= link_to post_path(post) do %>
              <img src="<%= post.feature_image.url%>" alt="" class="absolute inset-0 -z-10 h-full w-full object-cover">
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
              <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
                <time datetime="<%= post.post_date.strftime('%Y-%m-%d') %>" class="mr-8"><%= post.post_date %></time>
                <div class="-ml-4 flex items-center gap-x-4">
                  <svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
                    <circle cx="1" cy="1" r="1" />
                  </svg>
                  <div class="flex gap-x-2.5">
                    <%= post.author %>
                  </div>
                </div>
              </div>
              <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
                <span class="absolute inset-0"></span>
                <%= post.title %>
              </h3>
            <% end %>
          </article>
        <% end %>
      </div>
    <% else %>
      <p class="mt-16 text-center text-lg leading-8 text-gray-600">No recent articles available at the moment. Please check back later.</p>
    <% end %>
  </div>
</div>
